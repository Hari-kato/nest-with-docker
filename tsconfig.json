{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",  // Adjust target based on Node.js compatibility
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,      // Simplify strict checks
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing
    "noFallthroughCasesInSwitch": false
  }
}
